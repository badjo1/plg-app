<div id="<%= dom_id wall %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= wall.title %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this wall", wall, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this wall", edit_wall_path(wall), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
