        <div class="mt-4 text-center">
          <%= render 'layouts/button', text: "Explore Project", href: now_path, size: "small" %>        
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Get Involved -->
<section id="get-started" class="py-16 bg-gray-100">
  <div class="max-w-7xl mx-auto px-6 text-center">
